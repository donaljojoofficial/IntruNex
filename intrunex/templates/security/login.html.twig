{% extends 'base.html.twig' %}

{% block title %}Intrunex Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body { display:flex; justify-content:center; align-items:center; min-height:100vh; margin:0; }
        .form-container { width:320px; padding:24px; }
        .form-container .input-group label {
            display:block !important;
            margin-bottom:0.35rem !important;
            font-weight:600 !important;
            color:#f5f7fa !important; /* light label color */
            font-size:1rem !important;
            text-shadow:0 1px 0 rgba(0,0,0,0.35);
        }
        .form-container .title { font-size:1.6rem; font-weight:700; margin-bottom:1rem; color:#fff; }
        .form-container input.form-control { width:100%; box-sizing:border-box; padding:8px; }
        .sign { margin-top:12px; width:100%; padding:10px; }
    </style>
{% endblock %}

{% block body %}
<div class="form-container">
    <p class="title">Intrunex Login</p>
    <form class="form" method="post" action="{{ path('app_login') }}">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="input-group">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>

        <div class="input-group">
            <label for="inputPassword" class="form-label">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <button class="sign" type="submit">Sign in</button>
    </form>
    <p class="signup">Don't have an account?
        <a rel="noopener noreferrer" href="{{ path('app_register') }}">Sign up</a>
    </p>
</div>
{% endblock %}
